<div style="color:white;background:#4f5f78" bgcolor="#4f5f78">
  <div class="adM">

  </div>
  <div style="color:white;background:#4f5f78">
    <div class="adM">
    </div>
    <table cellpadding="0" cellspacing="0" border="0" style="border-collapse:collapse;font-family:Helvetica Neue,Arial,sans-serif;font-size:16px;color:#93ac85;width:100%;border-top-width:7px;border-top-color:#93ac85;border-top-style:solid">
      <tbody>
      <tr>
        <td valign="top" style="color:#54585f">
          <table cellpadding="0" cellspacing="0" border="0" align="center" style="border-collapse:collapse;width:100%">
            <tbody>
            <tr>
              <td valign="top" style="color:#54585f">
                <span class="im">
                  <table cellpadding="0" cellspacing="0" border="0" style="border-collapse:collapse;width:100%;color:white;margin:10px 0px 20px">
                    <tbody>
                      <tr>
                        <td valign="top" style="color:#54585f">
                          <h3 style="color: white;">Awesome Code</h3>
                        </td>
                        <td valign="top" width="250" style="text-align:right;padding-right:20px;color:#54585f" align="right">
                          <div>
                            <a href="<%= @build.absolute_url %>" style="color:white!important;text-decoration:underline;font-size:12px" target="_blank">View
                              build on Awesome Code
                            </a>
                          </div>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </span>
                <table cellpadding="0" cellspacing="0" border="0" style="border-collapse:collapse;width:98%;background:#f3f3f3;margin:25px auto 0;border:5px solid #7d90a9" bgcolor="#F3F3F3">
                  <tbody>
                    <tr>
                      <%- if @build.success? %>
                        <td valign="middle" style="vertical-align:middle;text-align:center;width:5%;color:#54585f;background:#93ac85" align="center" bgcolor="#93AC85">
                          <%= image_tag 'success.png', style: "display:inline;float:none", align: "none" %>
                        </td>
                      <%- else %>
                        <td valign="middle" style="vertical-align:middle;text-align:center;width:5%;color:#54585f;background:#964748" align="center" bgcolor="#964748">
                          <%= image_tag 'fail.png', style: "display:inline;float:none", align: "none" %>
                        </td>
                      <%- end %>

                      <td valign="top" style="color:#54585f;padding:10px">
                        <div>
                          <h1 style="color:#54585f;font-size:24px;margin-bottom:6px">
                            <a href="<%= @build.project.absolute_url %>" style="text-decoration:underline;color:#54585f" target="_blank"><%= "#{@build.project.owner_login}/#{@build.project.name}" %></a>
                          </h1>
                          <%= image_tag 'branch.png', style: "min-height:18px;margin:5px;float:left" %>
                          <h2 style="color:#54585f;font-size:20px;display:inline-block;margin-top:3px;margin-left:5px">
                            <%= @build.branch %>
                          </h2>
                        </div>
                        <div style="margin-top:10px;margin-bottom:10px;clear:both">
                          <div style="display:inline-block;float:left">
                            <%= image_tag @build.author_avatar_url, style: "margin-right:5px;border:1px solid #54585f" %>
                          </div>
                          <div style="padding-left:44px;font-size:12px"><%= @build.author %></div>
                          <div style="padding-left:44px;font-style:italic;font-size:14px"><%= @build.last_commit_message %>
                          </div>
                        </div>
                      </td>
                      <td valign="top" width="130" style="color:#54585f;border-left-color:#ccc;border-left-width:1px;border-left-style:solid;background:#f5f5f5;padding:10px" bgcolor="#f5f5f5">
                        <%- if @build.success? %>
                          <div style="text-align:center;text-transform:uppercase;color:#93ac85;margin:5px 0 10px" align="center">recovered</div>
                        <%- else %>
                          <div style="text-align:center;text-transform:uppercase;color:#964748;margin:5px 0 10px" align="center">failed</div>
                        <%- end %>

                        <div style="font-size:12px;margin-bottom:5px">
                          <%= image_tag 'duration.png', style: "margin-right:5px;width:18px" %>
                          <%= @build.duration_to_words %>
                        </div>

                        <div style="font-size:12px;margin-bottom:5px">
                          <%= image_tag 'commit.png', style: "width:13px;margin:2px 7px 0px 3px" %>
                          <a href="<%= @build.project.commit_url(@build.last_commit_id) %>" style="text-decoration:underline;color:#54585f" target="_blank"><%= @build.last_commit_id.slice(0, 10) %></a>
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>
                <%- if @build.success? %>
                  <table cellpadding="0" cellspacing="0" border="0" style="border-collapse:collapse;width:98%;background:#f3f3f3;margin:0 auto 25px;border:5px solid #5d768c" bgcolor="#F3F3F3">
                    <tbody>
                      <tr>
                        <td valign="middle" style="vertical-align:middle;text-align:center;width:5%;color:#54585f;background:#964748" align="center" bgcolor="#964748">
                          <%= image_tag 'fail.png', style: "display:inline;float:none", align: "none" %>
                        </td>
                        <td valign="top" style="color:#54585f;padding:10px">
                          <div style="margin-top:10px;margin-bottom:10px;clear:both">
                            <div style="display:inline-block;float:left">
                              <%= image_tag @previous_build.author_avatar_url, style: "margin-right:5px;border:1px solid #54585f" %>
                            </div>
                            <div style="padding-left:44px;font-size:12px"><%= @previous_build.author %></div>
                            <div style="padding-left:44px;font-style:italic;font-size:14px"><%= @previous_build.last_commit_message %></div>
                          </div>
                        </td>
                        <td valign="top" width="130" style="color:#54585f;border-left-color:#ccc;border-left-width:1px;border-left-style:solid;background:#f5f5f5;padding:10px" bgcolor="#f5f5f5">
                          <div style="font-size:12px;margin-bottom:5px">
                            <%= image_tag 'commit.png', style: "width:13px;margin:2px 7px 0px 3px" %>
                            <a href="<%= @previous_build.project.commit_url(@previous_build.last_commit_id) %>" style="text-decoration:underline;color:#54585f" target="_blank"><%= @previous_build.last_commit_id.slice(0, 10) %></a>
                          </div>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                <%- end %>

                <span class="im">
                  <table cellpadding="0" cellspacing="0" border="0" style="border-collapse:collapse;width:80%;background:#f3f3f3;margin:25px auto;border:5px solid #7d90a9" bgcolor="#F3F3F3">
                    <tbody>
                      <tr>
                        <td valign="top" style="color:#54585f;vertical-align:middle;width:40px;padding:10px">
                          <%= image_tag 'ask.png' %>
                        </td>
                        <td valign="top" style="color:#54585f;vertical-align:middle;padding:10px;font-size:12px">
                          If you have any questions or feedback please contact us at
                          <a href="mailto:support@xinminlabs.com" target="_blank">support@xinminlabs.com</a>
                        </td>
                      </tr>
                    </tbody>
                  </table>

                  <table cellpadding="0" cellspacing="0" border="0" style="border-collapse:collapse;width:80%;background:#f3f3f3;margin:25px auto;border:5px solid #7d90a9" bgcolor="#F3F3F3">
                    <tbody>
                      <tr>
                        <td valign="top" style="color:#54585f;vertical-align:middle;width:40px;padding:10px">
                          <%= image_tag 'setting.png' %>
                        </td>
                        <td valign="top" style="color:#54585f;vertical-align:middle;padding:10px;font-size:12px">
                          You can change your email settings on the
                          <a href="#" style="text-decoration:underline;color:#54585f" target="_blank">notification page</a>
                          of your project or disable them completely in your
                          <a href="#" style="text-decoration:underline;color:#54585f" target="_blank">account
                            settings
                          </a>.
                        </td>
                      </tr>
                    </tbody>
                  </table>

                  <div style="font-size:12px;color:#999;margin:25px 0;text-align:center" align="center">sent directly
                    from <%= link_to 'Awesome Code', Figaro.env.domain_url, style: 'text-decoration:underline;color:#999', target: "_blank" %>
                  </div>
                </span>
              </td>
              </tr>
            </tbody>
          </table>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
